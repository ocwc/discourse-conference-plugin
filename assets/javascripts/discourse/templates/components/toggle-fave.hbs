{{#if isFaved}}
    {{d-button
            icon="bookmark"
            class="btn-danger"
            label="conference_plugin.remove_from_favorites"
            action=(action 'toggleFave' sessionTag)
    }}
{{else}}
    {{d-button
            icon="bookmark"
            class="btn-primary"
            label="conference_plugin.save_to_favorites"
            action=(action 'toggleFave' sessionTag)
    }}
{{/if}}
